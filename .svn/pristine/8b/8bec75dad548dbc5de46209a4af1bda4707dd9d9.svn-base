<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBg"
    tools:context="lightcone.com.pack.activity.RoleActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#855643">
        <ImageView
            android:id="@+id/back_role"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            />
        <TextView
            android:id="@+id/title_role"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="剧本杀角色助手"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="44dp"
            android:textSize="20dp"
            android:textColor="#fff" />
    </LinearLayout>
    <TextView
        android:id="@+id/changetext"
        android:layout_marginTop="45.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_one"
        android:textSize="20dp"
        android:gravity="center_horizontal" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_role"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp">

    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/invitefriend"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/invite"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#b25b34"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/shape_orange"/>

    <include
        android:id="@+id/layout_admob_banner_ad"
        layout="@layout/admob_banner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</LinearLayout>
