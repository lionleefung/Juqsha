<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/temp_frame"
        android:layout_alignLeft="@+id/temp_frame"
        android:layout_alignRight="@+id/temp_frame"
        android:layout_alignTop="@+id/temp_frame"
        android:background="@drawable/chat_bubble4"/>

    <FrameLayout
        android:id="@+id/temp_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="1dp">

        <com.lightcone.feedback.BubbleMaskFrame
            android:id="@+id/chat_item_bubble_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="1">

            <ImageView
                android:id="@+id/chat_item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </com.lightcone.feedback.BubbleMaskFrame>
    </FrameLayout>

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/temp_frame"
        android:layout_below="@id/temp_frame"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:textColor="#777"
        android:textSize="12sp"/>
</RelativeLayout>